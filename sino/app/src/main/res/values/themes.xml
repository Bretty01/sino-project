<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sino" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/darkSlateGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_teal</item>
        <item name="colorSecondaryVariant">@color/deep_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for fragment title -->

    <style name="Theme.Sino.Title">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for list title -->

    <style name="Theme.Sino.listTitle">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for skill title -->

    <style name="Theme.Sino.skillTitle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- Style for buttons -->

    <style name="Theme.Sino.button">
        <item name="android:buttonStyleToggle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:buttonCornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/button_background_colour</item>
    </style>

    <style name="Theme.Sino.table">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Sino.skillMargin">
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>