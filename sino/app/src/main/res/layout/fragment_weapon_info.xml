<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.weapon.WeaponInfoFragment">

    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/weaponName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/typeIcon"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <ImageView
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/typeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/weaponName"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout">
        <TextView
                android:text="Element: "
                android:layout_width="wrap_content"
                android:layout_height="20dp" android:id="@+id/elementText"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginBottom="10dp"
        />
        <ImageView
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="20dp"
                android:layout_height="0dp" android:id="@+id/elementIcon"
                app:layout_constraintBottom_toBottomOf="@+id/elementText"
                app:layout_constraintStart_toEndOf="@+id/elementText"
                app:layout_constraintTop_toTopOf="@+id/elementText"/>
        <TextView
                android:text="Cost: "
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/costText"
                app:layout_constraintStart_toEndOf="@+id/elementIcon"
                app:layout_constraintTop_toTopOf="@+id/elementIcon"
                app:layout_constraintBottom_toBottomOf="@+id/elementIcon" android:layout_marginStart="15dp"/>
        <TextView
                android:layout_width="30dp"
                android:layout_height="0dp" android:id="@+id/costNumber"
                android:text="@string/rankPlaceholder"
                app:layout_constraintStart_toEndOf="@+id/costText" app:layout_constraintTop_toTopOf="@+id/costText"
                app:layout_constraintBottom_toBottomOf="@+id/costText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:id="@+id/weaponIcon1"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <ImageView
            android:id="@+id/weaponIcon2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toEndOf="@+id/weaponIcon1"
            app:layout_constraintTop_toTopOf="@+id/weaponIcon1"/>
    <ImageView
            android:id="@+id/weaponIcon3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toEndOf="@+id/weaponIcon2"
            app:layout_constraintTop_toTopOf="@+id/weaponIcon2"/>
    <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="4"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/weaponIcon2">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableWeaponText"
                    android:text="@string/rankPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponPatk"
                    android:text="@string/pAtk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMatk"
                    android:text="@string/mAtk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponPdef"
                    android:text="@string/pDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMdef"
                    android:text="@string/mDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponTotal"
                    android:text="@string/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableWeaponMinLvl"
                    android:text="@string/levelOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMinPatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMinMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMinPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMinMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMinTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableWeaponMaxLvl"
                    android:text="@string/lvlPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMaxPAtk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMaxMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMaxPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMaxMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMaxTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">

            <TextView
                    android:id="@+id/tableWeaponMlbLvl"
                    android:text="@string/lvlPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMlbPatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMlbMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMlbPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMlbMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableWeaponMlbTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            <ImageView
                    android:id="@+id/weaponStoryIcon"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/weaponStoryName"
                    android:text="@string/titlePlaceholder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/weaponStoryIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/weaponStoryDescription"
                android:text="@string/descriptionPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            <ImageView
                    android:id="@+id/weaponColoIcon"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/weaponColoName"
                    android:text="@string/titlePlaceholder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/weaponColoIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/weaponColoDescripton"
                android:text="@string/descriptionPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            <ImageView
                    android:id="@+id/weaponSupportIcon"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/weaponSupportName"
                    android:text="@string/titlePlaceholder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/weaponSupportIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/weaponSupportDescripton"
                android:text="@string/descriptionPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>