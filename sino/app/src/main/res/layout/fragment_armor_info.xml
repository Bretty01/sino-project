<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".fragments.armor.ArmorInfo">
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/armorName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/typeIcon"/>
    <ImageView
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/typeIcon"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" tools:src="@tools:sample/avatars" android:id="@+id/armorIcon1"
            app:layout_constraintTop_toBottomOf="@+id/typeIcon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" tools:src="@tools:sample/avatars" android:id="@+id/armorIcon2"
            app:layout_constraintStart_toEndOf="@+id/armorIcon1"
            app:layout_constraintTop_toBottomOf="@+id/armorName" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" tools:src="@tools:sample/avatars" android:id="@+id/armorIcon3"
            app:layout_constraintTop_toBottomOf="@+id/armorName" app:layout_constraintStart_toEndOf="@+id/armorIcon2"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/elementText"
            app:layout_constraintTop_toBottomOf="@+id/armorIcon1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" tools:src="@tools:sample/avatars" android:id="@+id/elementIcon"
            app:layout_constraintStart_toEndOf="@+id/elementText"
            app:layout_constraintBottom_toBottomOf="@+id/elementText"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/elementText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1" android:weightSum="4">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorText"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorPdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorTotal"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1" android:weightSum="4">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMinLvl"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMinPdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMinMdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMinTotal"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1" android:weightSum="4">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMaxLvl"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMaxPdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMaxMdef"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableArmorMaxTotal"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" android:id="@+id/armorSkillIcon"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/armorSkillName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/armorSkillIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/armorSkillDescription"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" android:id="@+id/armorSetIcon"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/armorSetName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/armorSetIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/armorSetDescripton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>