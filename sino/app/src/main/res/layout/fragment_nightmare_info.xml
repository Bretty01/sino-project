<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.nightmare.NightmareInfoFragment">

    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/nightmareName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/typeIcon"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <ImageView
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/typeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/nightmareIcon1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nightmareName" android:layout_marginTop="10dp"/>
    <ImageView
            android:id="@+id/nightmareIcon2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toEndOf="@+id/nightmareIcon1"
            app:layout_constraintTop_toTopOf="@+id/nightmareIcon1"/>
    <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="4"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/nightmareIcon2">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableNightmareText"
                    android:text="@string/rankPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmarePatk"
                    android:text="@string/pAtk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMatk"
                    android:text="@string/mAtk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmarePdef"
                    android:text="@string/pDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMdef"
                    android:text="@string/mDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareTotal"
                    android:text="@string/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableNightmareMinLvl"
                    android:text="@string/levelOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMinPatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMinMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMinPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMinMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMinTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">
            <TextView
                    android:id="@+id/tableNightmareMaxLvl"
                    android:text="@string/lvlPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMaxPAtk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMaxMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMaxPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMaxMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMaxTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6">

            <TextView
                    android:id="@+id/tableNightmareMlbLvl"
                    android:text="@string/lvlPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMlbPatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMlbMatk"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMlbPdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMlbMdef"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tableNightmareMlbTotal"
                    android:text="@string/numberPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <ImageView
                android:id="@+id/nightmareStoryIcon"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/nightmareStoryName"
                android:text="@string/titlePlaceholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nightmareStoryIcon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/nightmareStoryDescription"
            android:text="@string/descriptionPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <ImageView
                android:id="@+id/nightmareColoIcon"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/nightmareColoName"
                android:text="@string/titlePlaceholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nightmareColoIcon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/nightmareColoDescripton"
            android:text="@string/descriptionPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>