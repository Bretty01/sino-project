<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="0dp"
        android:visibility="visible">
    <ImageView
            android:id="@+id/imgNightmareIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            tools:srcCompat="@tools:sample/avatars"
            app:srcCompat="?attr/listChoiceBackgroundIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="txtName,txtPatk,txtPdef,txtMatk,txtMdef"
            app:layout_constraintStart_toEndOf="@id/imgNightmareIcon"/>
    <TextView
            android:id="@+id/txtName"
            android:text="Example Name of the Test Kind"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/txtPatk"
            android:text="PATK: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/txtPdef"
            app:layout_constraintStart_toStartOf="@+id/txtPdef"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/txtName"/>
    <TextView
            android:id="@+id/txtPdef"
            android:text="PDEF: 0000"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPatk"
            app:layout_constraintStart_toStartOf="@+id/txtName"/>
    <TextView
            android:id="@+id/txtMatk"
            android:text="MATK: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@+id/txtMdef"
            app:layout_constraintEnd_toEndOf="@+id/txtMdef"
            app:layout_constraintTop_toTopOf="@+id/txtPatk"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:id="@+id/txtMdef"
            android:text="MDEF: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtPdef"
            app:layout_constraintStart_toEndOf="@+id/txtPdef"
            app:layout_constraintEnd_toEndOf="@+id/txtName"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStoryIcon"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintBottom_toBottomOf="@+id/txtStoryDescription"
            app:layout_constraintTop_toTopOf="@+id/txtStoryDescription"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgColoIcon"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/imgStoryIcon"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="@+id/imgStoryIcon"
            app:layout_constraintStart_toStartOf="@+id/imgStoryIcon"/>
    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/txtStoryDescription"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imgStoryIcon"
            app:layout_constraintEnd_toEndOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtColoDescription"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/txtStoryDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtStoryDescription"
            app:layout_constraintStart_toStartOf="@+id/txtStoryDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>