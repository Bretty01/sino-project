<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="0dp"
        android:visibility="visible">
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            tools:srcCompat="@tools:sample/avatars"
            app:srcCompat="?attr/listChoiceBackgroundIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="nameText,patkText,pdefText,matkText,mdefText"
            app:layout_constraintStart_toEndOf="@id/imageView"/>
    <TextView
            android:id="@+id/nameText"
            android:text="Example Name of the Test Kind"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="10dp" android:layout_marginTop="5dp"/>
    <TextView
            android:id="@+id/patkText"
            android:text="PATK: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="@+id/pdefText"
            app:layout_constraintStart_toStartOf="@+id/pdefText"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/nameText"
            android:layout_marginTop="5dp"/>
    <TextView
            android:id="@+id/pdefText"
            android:text="PDEF: 0000"
            android:layout_width="110dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/patkText"
            android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="@+id/nameText"/>
    <TextView
            android:id="@+id/matkText"
            android:text="MATK: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@+id/mdefText"
            app:layout_constraintEnd_toEndOf="@+id/mdefText"
            app:layout_constraintTop_toTopOf="@+id/patkText"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:id="@+id/mdefText"
            android:text="MDEF: 0000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/pdefText"
            app:layout_constraintStart_toEndOf="@+id/pdefText"
            android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="@+id/nameText"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/nlStoryIcon" app:layout_constraintStart_toEndOf="@+id/barrier2"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/nlStoryDescription"
            app:layout_constraintTop_toTopOf="@+id/nlStoryDescription"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/nlColoIcon"
            android:visibility="invisible" app:layout_constraintTop_toBottomOf="@+id/nlStoryIcon"
            app:layout_constraintEnd_toEndOf="@+id/nlStoryIcon"
            app:layout_constraintStart_toStartOf="@+id/nlStoryIcon"/>
    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="20dp" android:id="@+id/nlStoryDescription"
            app:layout_constraintStart_toEndOf="@+id/nlStoryIcon"
            app:layout_constraintEnd_toEndOf="@+id/nameText"
            app:layout_constraintTop_toBottomOf="@+id/nameText" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp" android:layout_marginStart="5dp" android:visibility="invisible"/>
    <TextView
            android:text="@string/titlePlaceholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nlColoDescription"
            app:layout_constraintEnd_toEndOf="@+id/nlStoryDescription"
            app:layout_constraintTop_toBottomOf="@+id/nlStoryDescription"
            app:layout_constraintStart_toStartOf="@+id/nlStoryDescription" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>