<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="50dp">

        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:text="Order By"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:id="@+id/nfOrderGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true" >
                <Button
                        android:text="Desc."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/nfDescBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="DESC"/>
                <Button
                        android:text="Asc."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/nfAscBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="ASC"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <TextView
                    android:text="Field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
            />
            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nfSortGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true">
                <Button
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsNameBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmares.name"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/pAtk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsPatkBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_stats.mlb_patk"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/mAtk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsMatkBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_stats.mlb_matk"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/pDef"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsPdefBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_stats.mlb_pdef"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/mDef"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsMdefBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_stats.mlb_mdef"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/total"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsTotalBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle"
                        android:tag="(nightmare_stats.mlb_patk + nightmare_stats.mlb_matk +
                        nightmare_stats.mlb_pdef + nightmare_stats.mlb_mdef)"
                         android:textSize="10sp"/>
                <Button
                        android:text="Total Atk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsAtktotalBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle"
                        android:tag="(nightmare_stats.mlb_patk + nightmare_stats.mlb_matk)"
                        android:textSize="10sp"/>
                <Button
                        android:text="Total Def"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsDeftotalBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle"
                        android:tag="(nightmare_stats.mlb_pdef + nightmare_stats.mlb_mdef)" android:textSize="10sp"/>
                <Button
                        android:text="Story"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsStoryBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_story.story_name"
                        android:textSize="10sp"/>
                <Button
                        android:text="Colo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsColoBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_colo.colo_name"
                        android:textSize="10sp"/>
                <Button
                        android:text="Prep"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsPrepBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_colo.colo_preparation"
                        android:textSize="10sp"/>
                <Button
                        android:text="Duration"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/nsDurationBtn" android:layout_weight="1"
                        style="?attr/materialButtonOutlinedStyle" android:tag="nightmare_colo.colo_duration"
                        android:textSize="10sp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <Button
                    android:text="submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/nsSubmitBtn"
                    style="?attr/materialButtonOutlinedStyle"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>