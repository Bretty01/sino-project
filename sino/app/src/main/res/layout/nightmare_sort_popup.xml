<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="50dp">
        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:text="Order By"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:id="@+id/nfOrderGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true" >
                <Button
                        android:text="Desc."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnDesc"
                        android:layout_weight="1"
                        android:tag="DESC"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Asc."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnAsc"
                        android:layout_weight="1"
                        android:tag="ASC"
                        style="?attr/materialButtonOutlinedStyle"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <TextView
                    android:text="Field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtField"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nfSortGroup"
                    app:singleSelection="true"
                    app:selectionRequired="true">
                <Button
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnName"
                        android:layout_weight="1"
                        android:tag="nightmares.name"
                        style="?attr/materialButtonOutlinedStyle"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/pAtk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnPatk"
                        android:layout_weight="1"
                        android:tag="nightmare_stats.mlb_patk"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="@string/mAtk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnMatk"
                        android:layout_weight="1"
                        android:tag="nightmare_stats.mlb_matk"
                        style="?attr/materialButtonOutlinedStyle"
                        android:textSize="10sp"/>
                <Button
                        android:text="@string/pDef"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnPdef"
                        android:layout_weight="1"
                        android:tag="nightmare_stats.mlb_pdef"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="@string/mDef"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnMdef"
                        android:layout_weight="1"
                        android:tag="nightmare_stats.mlb_mdef"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="@string/total"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnTotal"
                        android:layout_weight="1"
                        android:tag="(nightmare_stats.mlb_patk + nightmare_stats.mlb_matk +
                        nightmare_stats.mlb_pdef + nightmare_stats.mlb_mdef)"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Total Atk"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnAtkTotal"
                        android:layout_weight="1"
                        android:tag="(nightmare_stats.mlb_patk + nightmare_stats.mlb_matk)"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Total Def"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnDefTotal"
                        android:layout_weight="1"
                        android:tag="(nightmare_stats.mlb_pdef + nightmare_stats.mlb_mdef)"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Story"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnStory"
                        android:layout_weight="1"
                        android:tag="nightmare_story.story_name"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Colo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnColo"
                        android:layout_weight="1"
                        android:tag="nightmare_colo.colo_name"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Prep"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnPreparation"
                        android:layout_weight="1"
                        android:tag="nightmare_colo.colo_preparation"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
                <Button
                        android:text="Duration"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnDuration"
                        android:layout_weight="1"
                        android:tag="nightmare_colo.colo_duration"
                        android:textSize="10sp"
                        style="?attr/materialButtonOutlinedStyle"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <Button
                    android:text="submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSubmit"
                    style="?attr/materialButtonOutlinedStyle"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>