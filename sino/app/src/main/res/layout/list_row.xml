<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="0dp"
        android:visibility="visible"
        android:id="@+id/constraintList">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="?attr/listChoiceBackgroundIndicator"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier2"
            app:barrierDirection="start"
            app:constraint_referenced_ids="nameText,patkText,pdefText,matkText,mdefText"
            app:layout_constraintStart_toEndOf="@id/imageView"/>
    <TextView
            android:text="Example Name of the Test Kind"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/nameText"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="24dp"/>
    <TextView
            android:text="MAXPATK:0000"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:id="@+id/patkText"
            app:layout_constraintEnd_toEndOf="@+id/pdefText"
            app:layout_constraintStart_toStartOf="@+id/pdefText"
            app:layout_constraintBottom_toTopOf="@+id/pdefText"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="PDEF:0000"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:id="@+id/pdefText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="11dp"
            app:layout_constraintStart_toEndOf="@id/barrier2"/>
    <TextView
            android:text="MATK:0000"
            android:layout_width="110dp"
            android:layout_height="20dp" android:id="@+id/matkText"
            app:layout_constraintStart_toStartOf="@+id/mdefText"
            app:layout_constraintEnd_toEndOf="@+id/mdefText"
            app:layout_constraintTop_toTopOf="@+id/patkText"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <TextView
            android:text="MDEF:0000"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:id="@+id/mdefText"
            app:layout_constraintBottom_toBottomOf="@+id/pdefText"
            app:layout_constraintStart_toEndOf="@+id/pdefText"
    />
</androidx.constraintlayout.widget.ConstraintLayout>